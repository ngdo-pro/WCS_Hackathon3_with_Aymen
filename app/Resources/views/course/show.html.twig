{% extends 'base.html.twig' %}

{% block body %}
    <h1>Course</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Departuredate</th>
                <td>{% if course.departureDate %}{{ course.departureDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Departuretime</th>
                <td>{% if course.departureTime %}{{ course.departureTime|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Seatsavailable</th>
                <td>{{ course.seatsAvailable }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('course_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('course_edit', { 'id': course.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
