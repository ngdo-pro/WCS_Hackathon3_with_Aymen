{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/rent.css') }}">
{% endblock %}

{% trans_default_domain 'rent' %}
{% block body %}
    <section id="rent" class="valign-wrapper last">
        <h3 class="valign">{{ 'rentpage.rent-hashtag' |trans({}, 'rentpage') }}</h3>
    </section>
    <section id="rentList">
        <div class="row">
            {% for rent in rents %}
                <a href="#modal-{{ rent.id }}" class="open-modal">
                    <div class="col s10 offset-s1 z-depth-3 rowList ">
                        <div class="row rent-name">
                            <span class="left">{{ rent.name }}</span>
                        </div>
                        <div class="row rent-infos valign-wrapper">
                            <div class="category-list amber darken-1 valign">{{ rent.size }}</div>
                            <i class="material-icons valign light-blue darken-2 white-text">favorite_border</i>
                            <div class="likes-list light-blue darken-2 white-text valign">{{ rent.english }}</div>
                            {% if rent.discount %}
                                <div class="dicount-list valign red darken-1 white-text">
                                    - {{ rent.discount }} %
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </a>
                <div id="modal-{{ rent.id }}" class="modal modal-fixed-footer">
                    <div class="modal-content">
                        <div class="row">
                            <h4 class="center-align col s12">{{ rent.name }}</h4>
                        </div>
                        <div class="row rent-infos-modal valign-wrapper">
                            <div class="category-list amber darken-1 valign">{{ rent.category |capitalize }}</div>
                            <i class="material-icons valign light-blue darken-2 white-text">favorite_border</i>
                            <div class="likes-list light-blue darken-2 white-text valign">{{ rent.likes }}</div>
                            {% if rent.discount %}
                                <div class="dicount-list valign red darken-1 white-text">
                                    - {{ rent.discount }} %
                                </div>
                            {% endif %}
                        </div>
                        <div class="row">
                            <p class="col s12">{{ rent.description }}</p>
                        </div>
                        <div class="row">
                            <p class="col s12">{{ rent.address }}</p>
                        </div>
                        <div class="row">
                            <p class="col s12"><i class="material-icons">phone</i>{{ rent.phoneNumber }}</p>
                            {% if rent.email != null %}<p class="col s12">{{ rent.email }}</p>{% endif %}
                        </div>
                        {% if rent.menuImg != null %}
                            <div class="row">
                                <img src="{{ asset('img/' ~ rent.menuImg ) }}" class="materialboxed"/>
                            </div>
                        {% endif %}
                        <div class="row">
                            <iframe
                                    width="100%"
                                    height="350"
                                    frameborder="0"
                                    style="border:0;"
                                    class="grayscale"
                                    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA-rF-Vq2l82L91CVwjkQXVJSRGYeBczFo&q={{ rent.address }}%20France" allowfullscreen>
                            </iframe>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
